{
  "name": "sara",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android:dev": "ENVFILE=.env.development npx react-native run-android --mode=devDebug --appIdSuffix=dev",
    "android:stage": "ENVFILE=.env.staging npx react-native run-android --mode=stageDebug --appIdSuffix=stage",
    "android:prod": "ENVFILE=.env.production npx react-native run-android --mode=prodDebug",
    "android:dev:release": "ENVFILE=.env.development cd android && ./gradlew assembleDevRelease",
    "android:stage:release": "ENVFILE=.env.staging cd android && ./gradlew assembleStageRelease",
    "android:prod:release": "ENVFILE=.env.production cd android && ./gradlew assembleProdRelease",
    "android:dev:distribute": "ENVFILE=.env.development cd android && ./gradlew incrementVersion assembleDevRelease appDistributionUploadDevRelease",
    "android:stage:distribute": "ENVFILE=.env.staging cd android && ./gradlew incrementVersion assembleStageRelease appDistributionUploadStageRelease",
    "android:prod:distribute": "ENVFILE=.env.production cd android && ./gradlew incrementVersion assembleProdRelease appDistributionUploadProdRelease",
    "ios:dev": "ENVFILE=.env.development npx react-native run-ios --scheme='SaraDev'",
    "ios:stage": "ENVFILE=.env.staging npx react-native run-ios --scheme='SaraStage'",
    "ios:prod": "ENVFILE=.env.production npx react-native run-ios --scheme='Sara'",
    "ios:dev:distribute": "cd ios && bundle exec fastlane dev",
    "ios:stage:distribute": "cd ios && bundle exec fastlane stage",
    "ios:prod:distribute": "cd ios && bundle exec fastlane prod",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest"
  },
  "dependencies": {
    "@react-native/new-app-screen": "0.82.1",
    "react": "19.1.1",
    "react-native": "0.82.1",
    "react-native-config": "^1.5.9",
    "react-native-paper": "^5.14.5",
    "react-native-safe-area-context": "^5.5.2",
    "react-native-vector-icons": "^10.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "20.0.0",
    "@react-native-community/cli-platform-android": "20.0.0",
    "@react-native-community/cli-platform-ios": "20.0.0",
    "@react-native/babel-preset": "0.82.1",
    "@react-native/eslint-config": "0.82.1",
    "@react-native/metro-config": "0.82.1",
    "@react-native/typescript-config": "0.82.1",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.1.1",
    "@types/react-test-renderer": "^19.1.0",
    "eslint": "^8.19.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^29.6.3",
    "prettier": "2.8.8",
    "react-test-renderer": "19.1.1",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20"
  }
}
